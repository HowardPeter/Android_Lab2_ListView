<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".DishDetails">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="23sp"
        android:textColor="#4AA610"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="CHI TIẾT MÓN ĂN" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/banh_mi" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#E6720D"
                android:textStyle="bold"
                android:text="Dish name" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#BC000000"
                android:text="Dish Category" />

            <TextView
                android:id="@+id/tvIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#BC000000"
                android:text="Dish Ingredients" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="#248DB6"
            android:text="Size:" />

        <TextView
            android:id="@+id/tvSize"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#248DB6"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="#248DB6"
            android:text="Giá:" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#248DB6"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>